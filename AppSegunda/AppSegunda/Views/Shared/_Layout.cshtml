<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css") @**@
    @Scripts.Render("~/bundles/modernizr")
    @*@Styles.Render("~/Content/teste.css")*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="mais opções">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nome do aplicativo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Página Inicial", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Sobre", "About", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Bootstrap", "Estilo", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Aluno", "Index", "Home", new { area = "Aluno"}, null)</li>
                </ul>
            </div>
        </div>
    </div>

    @RenderPage("~/Views/Shared/_cabecalho.cshtml")

    <a href ="https://getbootstrap.com/" target="_blank" class="text_danger"> Link Bootstrap</a>

    <div class="container body-content">
        @RenderBody()
        <hr />

        @if (IsSectionDefined("rodapeEspecifico"))
        {

            @RenderSection("rodapeEspecifico")
        }

        else
        {
            @Html.Partial("_rodape")
        }


        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
